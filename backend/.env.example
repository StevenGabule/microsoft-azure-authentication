# Application
NODE_ENV=development
PORT=4000
API_PREFIX=api/v1
FRONTEND_URL=http://localhost:3000

# Azure AD / Microsoft Entra ID
AZURE_AD_CLIENT_ID=your-client-id
AZURE_AD_CLIENT_SECRET=your-client-secret
AZURE_AD_TENANT_ID=your-tenant-id
AZURE_AD_REDIRECT_URI=http://localhost:4000/api/v1/auth/callback
AZURE_AD_AUTHORITY=https://login.microsoftonline.com/your-tenant-id

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/azure_auth_db

# Redis
REDIS_URL=redis://localhost:6379

# JWT
JWT_SECRET=your-256-bit-secret-minimum-32-characters-long
JWT_REFRESH_SECRET=your-separate-256-bit-refresh-secret-32-chars
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# Security
SESSION_SECRET=your-session-secret-minimum-32-characters
MFA_ENCRYPTION_KEY=your-mfa-encryption-key-32-characters
CORS_ORIGINS=http://localhost:3000

# Session timeouts (seconds)
SESSION_IDLE_TIMEOUT=1800
SESSION_ABSOLUTE_TIMEOUT=86400
